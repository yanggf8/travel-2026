{
  "name": "yokohama-travel-2026",
  "version": "1.0.0",
  "description": "Travel planning project with status check and process automation",
  "main": "src/status/status-check.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "vitest run --config vitest.config.ts",
    "test:integration": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "test:coverage": "vitest run --config vitest.config.ts --coverage",
    "hooks:install": "cp scripts/hooks/* .git/hooks/ && chmod +x .git/hooks/*",
    "postinstall": "npm run hooks:install",
    "status": "ts-node src/status/status-check.ts",
    "status:json": "ts-node src/status/status-check.ts --json",
    "status:ascii": "ts-node src/status/status-check.ts --ascii",
    "travel": "ts-node src/cli/travel-update.ts",
    "view:status": "ts-node src/cli/travel-update.ts status --full",
    "view:itinerary": "ts-node src/cli/travel-update.ts itinerary",
    "view:transport": "ts-node src/cli/travel-update.ts transport",
    "view:bookings": "ts-node src/cli/travel-update.ts bookings",
    "view:prices": "ts-node src/cli/travel-update.ts view-prices",
    "validate:data": "ts-node scripts/validate-data.ts",
    "doctor": "ts-node scripts/validate-data.ts --doctor",
    "compare-trips": "ts-node src/cli/compare-trips.ts",
    "compare-dates": "ts-node src/cli/compare-dates.ts",
    "normalize-flights": "ts-node src/utils/flight-normalizer.ts",
    "leave-calc": "ts-node src/utils/leave-calculator.ts",
    "db:import:turso": "ts-node scripts/import-offers-to-turso.ts",
    "db:status:turso": "ts-node scripts/turso-status.ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "zod": "^4.3.6"
  }
}
